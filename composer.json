{
    "name": "phpunit/phpunit-runner",
    "description": "Experimental runner for PHPUnit tests",
    "type": "library",
    "keywords": [
        "phpunit",
        "xunit",
        "testing"
    ],
    "homepage": "https://phpunit.de/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Sebastian Bergmann",
            "email": "sebastian@phpunit.de",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/sebastianbergmann/phpunit-runner/issues"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^7.0",
        "roave/better-reflection": "^2.0",
        "symfony/finder": "^4.0"
    },
    "require-dev": {
        "ext-PDO": "*"
    },
    "config": {
        "platform": {
            "php": "7.2.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "bin": [
        "phpunit"
    ],
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
